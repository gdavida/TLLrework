
  <div class="jumbotron">
  </div>

    <div class="container">
      <!-- Example row of columns -->
      <div class="row">
        <!-- COLOR BACKGROUND ROW -->
        <div class="col-xs-12 colorRow headerColorRow">
          <h1>CREATE NEW BOX</h1>
        </div>

        <!-- ERROR MESSAGE AREA, should turn into form validations instead !!!! -->
        <!-- !!!!!!!!!    !!!!!!!!!!   !!!!!   !!!!!!!!   !!!!!!!!!!  ! !!!!!!! -->
        <div class="col-xs-12"
          <% if @box.errors.any? %>
            <div class="col-xs-12">
                  <ul>
                    <% @box.errors.full_messages.each do |e| %>
                      <li><%= e %></li>
                    <% end %>
                  </ul>
            </div>
        <% end %>    
      </div>
        <!-- NEW TOY FORM -->
        <div class="col-xs-12 boxForm">
          <form action="/boxes/<%= @box.id %>" method="post" >
            <div class="form-group">
              <label class="control-label">Box Name:</label>
              <input class="form-control" type="text" name="name" value="<%=@box.name %>"><br>

              <label class="control-label">Status:</label>
              <input class="form-control" type="text" name="status" value="<%= @box.status %>"><br>
              
              <label class="control-label">Age Group:</label>
                <select class="form-control" name="age_group_id">
                  <% @age_groups.each do |a| %>
                    <option value="<%= a.id %>">
                      <%= a.age %>
                    </option>
                  <% end %>
                </select><br>

              <label class="control-label">Location:</label>
                <select class="form-control" name="location_id">
                  <% @locations.each do |l| %>
                    <option value="<%= l.id %>">
                      <%= l.branch_name %>
                    </option>
                  <% end %>
                </select><br>
            </div>
            <button type="submit">
              <i class="fa fa-plus-circle fa-3x" aria-hidden="true"></i>
            </button>
          </form>
        </div>
      </div>
    </div>