        <div class="col-xs-12 col-md-4 colorRow headerColorRow">
          <h1>SHOW THIS BOX</h1>
        </div>

        <!-- SHOW TOY CARD -->
        <div class="col-xs-12 col-md-4 col-md-6 col-md-offset-3">
            <div class="card">
                <div class="card-image">
                    <img class="img-responsive" src="<%= @box.pic_url %>">
